alias hdocron='sh ~/hdo2/scripts/cron.sh'
alias hdostart='cd ~/hdo2 && docker-compose up -d'
alias hdobash='docker exec -ti hdo_change2 bash'
alias hdostop='docker-compose stop'
alias hdorestart='hdostop && hdostart'

